<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="@dimen/_10sdp"
        android:width="@dimen/_10sdp"
        >
        <rotate
            android:fromDegrees="45"
            android:pivotX="-50%"
            android:pivotY="80%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="#cebbca" >
                </solid>

                <stroke
                    android:width="2dp"
                    android:color="#cebbca" />
            </shape>
        </rotate>
    </item>

</layer-list>