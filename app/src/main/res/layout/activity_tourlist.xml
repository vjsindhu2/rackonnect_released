<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/tourlist_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rrMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/background"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:titleTextColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="finishTourList"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center">


                            <ImageView
                                android:id="@+id/btnBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_back" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/ll1"
                            android:padding="7dp"
                            android:text="Tournaments"
                            android:textColor="@color/color_white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp">

                <TextView

                    android:id="@+id/totaltours_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="----"
                    android:textColor="#FF000000"
                    android:textSize="@dimen/_11sdp" />


                <ImageView

                    android:id="@+id/search_opp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/ivFilter"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/search" />

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/filter" />

                <ImageView
                    android:id="@+id/ivLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/path" />
            </RelativeLayout>


            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="#f6f6f6"


                android:hint="Search"
                android:imeOptions="actionDone"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:visibility="gone" />
        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout

            android:id="@+id/swipreferesh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tourlist_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/tour_matchlist_row">


                </androidx.recyclerview.widget.RecyclerView>


                <include
                    android:id="@+id/lyt_item"
                    layout="@layout/item_no_lyt"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </LinearLayout>

    <io.codetail.widget.RevealFrameLayout
        android:id="@+id/revell_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/ll_filter"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:fillViewport="true"
            android:visibility="invisible">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/colse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_close_black_24dp" />

                    <TextView
                        android:id="@+id/filter_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="10dp"
                        android:text="Filters"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/reset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:onClick="resetallfilter"
                        android:padding="10dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_refresh_black_24dp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10dp"
                            android:text="Location"
                            android:textAlignment="textStart"
                            android:textAllCaps="true"
                            android:textColor="@color/color_gray_90"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:id="@+id/city_select_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cityname_tv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.90"
                                android:padding="@dimen/_10sdp"
                                android:text="Select Location"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.10"
                                android:padding="@dimen/_5sdp"
                                app:srcCompat="@drawable/ic_pin_drop_black_24dp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical|start"
                            android:layout_weight="0.80"
                            android:background="#e2d6d6" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10dp"
                            android:text="Gender"
                            android:textAlignment="textStart"
                            android:textAllCaps="true"
                            android:textColor="@color/color_gray_90"
                            android:textStyle="bold" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/bothgender_cv"

                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                app:cardBackgroundColor="@color/colorPrimaryDark"
                                app:cardCornerRadius="4dp"
                                app:cardElevation="4dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:background="@drawable/ic_all" />

                                    <TextView
                                        android:id="@+id/lbl_allplayer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:text="All Players"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/_11sdp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/male_cv"

                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"

                                app:cardBackgroundColor="@color/color_white"
                                app:cardCornerRadius="4dp"
                                app:cardElevation="4dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:background="@drawable/ic_male" />

                                    <TextView
                                        android:id="@+id/lbl_tvMale"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:text=" Male "
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_11sdp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/female_cv"

                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"

                                app:cardBackgroundColor="@color/color_white"
                                app:cardCornerRadius="4dp"
                                app:cardElevation="4dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:background="@drawable/ic_female" />

                                    <TextView
                                        android:id="@+id/lbl_tvFemale"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:text="Female"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_11sdp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical|start"
                            android:background="#e2d6d6" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.50"
                                android:gravity="start"
                                android:padding="10dp"
                                android:text="Joining Fee"
                                android:textAllCaps="true"
                                android:textColor="@color/color_gray_90"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/range_lbl"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.50"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="---"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_5sdp">

                            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                                android:id="@+id/ageSeekbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                app:bar_color="#E0E4F1"
                                app:bar_highlight_color="#0F33B8"
                                app:corner_radius="10"

                                app:data_type="_integer"

                                app:left_thumb_color="#0F33B8"
                                app:left_thumb_color_pressed="#0F33B8"

                                app:right_thumb_color="#0F33B8"
                                app:right_thumb_color_pressed="#0F33B8" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/age_minval"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.50"
                                    android:text="--"

                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/age_maxval"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|end"
                                    android:layout_weight="0.50"
                                    android:gravity="right|end"
                                    android:text="--"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical|start"
                            android:background="#e2d6d6" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:gravity="start"
                            android:padding="10dp"
                            android:text="TIME"
                            android:textAllCaps="true"
                            android:textColor="@color/color_gray_90"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/level_group"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <RadioButton
                                android:id="@+id/amature_checked"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layoutDirection="rtl"
                                android:text="Amateur"
                                android:textAlignment="textStart"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

                            <RadioButton
                                android:id="@+id/intermediate_checked"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layoutDirection="rtl"

                                android:text="Semi Pro"
                                android:textAlignment="textStart"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

                            <RadioButton
                                android:id="@+id/pro_checked"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="start"
                                android:layoutDirection="rtl"
                                android:text="Pro"
                                android:textAlignment="textStart"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

                            <RadioButton
                                android:id="@+id/expret_checked"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="start"
                                android:layoutDirection="rtl"
                                android:text="Expert"
                                android:textAlignment="textStart"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/checkBox2" />
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:orientation="horizontal">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="none">

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/anytym_cv"

                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="@dimen/_80sdp"
                                        app:cardBackgroundColor="@color/colorPrimaryDark"
                                        app:cardCornerRadius="4dp"
                                        app:cardElevation="4dp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_gravity="center_horizontal|center_vertical"
                                            android:orientation="vertical">


                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical|center_horizontal"
                                                android:background="@drawable/ic_clock"
                                                android:scaleType="fitCenter" />

                                            <TextView
                                                android:id="@+id/lbl_anytym"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:padding="@dimen/_5sdp"
                                                android:text="@string/any"
                                                android:textColor="@color/color_white"
                                                android:textSize="@dimen/_8sdp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/morning_cv"

                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="@dimen/_80sdp"

                                        app:cardBackgroundColor="@color/color_white"
                                        app:cardCornerRadius="4dp"
                                        app:cardElevation="4dp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_gravity="center_vertical|center_horizontal"
                                            android:orientation="vertical">


                                            <ImageView

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical|center_horizontal"
                                                android:background="@drawable/ic_morning"
                                                android:scaleType="fitCenter" />

                                            <TextView
                                                android:id="@+id/lbl_tvMorning"

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:padding="@dimen/_5sdp"
                                                android:text="@string/morning06am_12noon"
                                                android:textAlignment="center"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="@dimen/_8sdp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/afternoon_cv"

                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="@dimen/_80sdp"

                                        app:cardBackgroundColor="@color/color_white"
                                        app:cardCornerRadius="4dp"
                                        app:cardElevation="4dp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_gravity="center_horizontal|center_vertical"
                                            android:orientation="vertical">


                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical|center_horizontal"
                                                android:background="@drawable/ic_afternoon"
                                                android:scaleType="fitCenter" />

                                            <TextView
                                                android:id="@+id/lbl_tvAfternoon"

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:padding="@dimen/_5sdp"
                                                android:text="@string/afternoon12_noon_5_pm"
                                                android:textAlignment="center"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="@dimen/_8sdp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/evening_cv"

                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="@dimen/_80sdp"

                                        app:cardBackgroundColor="@color/color_white"
                                        app:cardCornerRadius="4dp"
                                        app:cardElevation="4dp"
                                        app:cardUseCompatPadding="true">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
