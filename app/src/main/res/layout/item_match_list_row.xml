<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="wrap_content">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="1.5"
        android:background="#FFFFF0"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/game_type_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.3"
            app:srcCompat="@drawable/badmin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal"

                android:paddingRight="@dimen/_10sdp">


                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/fl1"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/host_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/p"
                        app:civ_border_color="@color/color_black"
                        app:civ_border_width="0dp" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/fl1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_host_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:text="Rohan Awasthi"
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_host_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMATEUR"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_host_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--  Points"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/fl2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_opponet_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:text="Ankush Gupta"
                        android:textColor="@color/color_black"
                        android:textSize="12sp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_opponet_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="SEMI-PRO"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_opponet_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="-- Points"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/fl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/opponet_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/pp"
                        app:civ_border_color="@color/color_black"
                        app:civ_border_width="0dp" />

                </FrameLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_toRightOf="@+id/tvSc"
                    android:layout_weight="1"
                    android:background="#FF0F33B8" />


                <TextView
                    android:id="@+id/tvSc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="vs"
                    android:textColor="#FF0F33B8"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_toLeftOf="@+id/tvSc"
                    android:layout_weight="1"
                    android:background="#FF0F33B8" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="Location"
                            android:textColor="@color/color_black"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/tvAreaName_vanue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:text="Play Arena, Bengaluru"
                            android:textColor="@color/color_black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:layout_weight="1.2"
                        android:gravity="right|end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="GAME INFO"
                            android:textColor="@color/color_black"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/gameinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:text="Play Arena, Bengaluru"
                            android:textColor="@color/color_black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>